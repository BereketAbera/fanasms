<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      .container {
        display: flex;
        justify-content: center;
        align-items: center;
        align-self: center;
        /* width: 100%; */
        flex-direction: column;
      }
      .content {
        display: flex;
      }
      table {
        width: 100%;
        border-collapse: collapse;
       
      }

      th {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        font-size: 24px;
        color: #fff;
        /* line-height: 1.4; */
        background-color: #235d92;
        font-weight: 700rem;
        width: 10rem;
      }

      td {
        border: 1px solid #999;
        font-family: Lato-Regular;
        font-size: 18px;
        color: #808080;
        line-height: 1.4;
        width: 10rem;

      }
    </style>
  </head>

  <body>
    <div class="container">
  
      <%if (!response.success) { %>
      <div id="errorCntr">
        <ul id="erUl" class="errors">
          <%= response.msg %>
        </ul>
        <!-- <p><%= response.msg %></p> -->
      </div>
      <% } %> <%if (response.success) { %>
      <div id="sentCrl">
        <ul id="erUl" class="errors">
          <%= response.resp %>
        </ul>
        <!-- <p><%= response.msg %></p> -->
      </div>
      <% } %>

      <div>
        <table>
          <tr>
            <th>Name</th>
            <th>Key</th>
            <th>Point</th>
          </tr>
          <% for(var i=0; i < response.votes.length; i++) { %>
          <tr>
            <td><%= response.votes[i].choiceTitle %></td>
            <td><%= response.votes[i].key %></td>
            <td><%= response.votes[i].count %></td>
          </tr>
          <% } %>    
        </table>
      </div>
     
    </div>
  </body>
</html>
